{
  "manifest_version": 3,
  "name": "元气助手",
  "version": "1.0.0",
  "description": "聚合日常网页浏览中最常用的实用工具：链接管理、复制限制解除、媒体文件提取等功能",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel",
    "scripting",
    "downloads",
    "notifications",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/selection-unlock.js",
        "src/content/link-rewriter.js",
        "src/content/asset-collector.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "元气助手",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  
  "options_page": "src/options/options.html",
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "src/content/*.css",
        "src/shared/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self' data: blob: https:;"
  }
} 